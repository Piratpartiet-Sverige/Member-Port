{
  "$id": "member",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Member",
  "type": "object",
  "properties": {
    "name": {
      "type": "object",
      "properties": {
        "first": {
          "type": "string"
        },
        "last": {
          "type": "string"
        }
      }
    },
    "street": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "postal_code": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "format": "phone",
      "title": "Phone number",
      "minLength": 6,
      "ory.sh/kratos": {
        "credentials": {
          "password": {
            "identifier": true
          }
        }
      }
    },
    "email": {
      "type": "string",
      "format": "email",
      "title": "E-Mail",
      "minLength": 5,
      "ory.sh/kratos": {
        "credentials": {
          "password": {
            "identifier": true
          }
        },
        "verification": {
          "via": "email"
        }
      }
    }
  },
  "required": [
    "email",
    "name"
  ],
  "additionalProperties": false
}
